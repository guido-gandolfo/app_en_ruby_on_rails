<div class="cabecera">
    <p class="cabecera" id="notice"><%= notice %></p>
    <p class="alert cabecera"><%=alert%></p>
</div>
<% @vacunatorios.each do |v| %>
    <h1><b>Vacunatorio:</b> <%=v.zona%></h1>
    <h1><b>Direccion Actual:</b> <%=v.direccion%></h1>
    <p><b>Cantidad de vacunas aplicadas: </b><%= @vacunas.where(lugar_act: v.zona, estado: "Atendido",fecha_aplicacion: Date.today).count%></p>
    <p><b>Cantidad de vacunas de covid aplicadas: </b><%= @vacunas.where(nombre_vacuna: "Covid", lugar_act: v.zona, estado: "Atendido",fecha_aplicacion: Date.today).count%></p>
    <p><b>Cantidad de vacunas de fiebre amarilla aplicadas: </b><%= @vacunas.where(nombre_vacuna: "Fiebre amarilla", lugar_act: v.zona, estado: "Atendido",fecha_aplicacion: Date.today).count%></p>
    <p><b>Cantidad de vacunas de gripe aplicadas: </b><%= @vacunas.where(nombre_vacuna: "Gripe", lugar_act: v.zona, estado: "Atendido",fecha_aplicacion: Date.today).count%></p>
<%end%>

